\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
log_{10}(a_{1}+\frac{b}{M})-dqlog_{10}(M)+eq\\
-log_{10}(a_{2}\dot{M}+b)+\frac{1}{d}log_{10}(\dot{M})-\frac{e}{d}qlog_{10}(\dot{M})=0\;,
\end{multline*}

\end_inset

where 
\begin_inset Formula $a_{1}$
\end_inset

, 
\begin_inset Formula $a_{2}$
\end_inset

, and 
\begin_inset Formula $b$
\end_inset

